{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "outDir": "dist-electron",
        "rootDir": "electron",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "electron/**/*"
    ]
}